<%- include('partials/header') %>

<main>
    <section class="product-detail">
        <div class="container">
            <div class="product-detail-grid">
                <div class="product-images">
                    <div class="main-image">
                        <img src="<%= product.image %>" alt="<%= product.name %>" onerror="this.src='https://images.pexels.com/photos/4386467/pexels-photo-4386467.jpeg?auto=compress&cs=tinysrgb&w=600'">
                    </div>
                </div>
                
                <div class="product-info">
                    <h1 class="product-title"><%= product.name %></h1>
                    <p class="product-short-desc"><%= product.shortDescription %></p>
                    <div class="product-price-large"><%= product.price %></div>
                    
                    <div class="product-actions">
                        <button class="btn btn-primary btn-large">Add to Cart</button>
                        <button class="btn btn-secondary btn-large">Buy Now</button>
                    </div>
                    
                    <div class="product-benefits">
                        <h3>Key Benefits</h3>
                        <ul>
                            <% product.benefits.forEach(benefit => { %>
                                <li><%= benefit %></li>
                            <% }); %>
                        </ul>
                    </div>
                </div>
            </div>
            
            <div class="product-details-tabs">
                <div class="tabs">
                    <button class="tab-btn active" data-tab="description">Description</button>
                    <button class="tab-btn" data-tab="ingredients">Ingredients</button>
                    <button class="tab-btn" data-tab="usage">Usage</button>
                </div>
                
                <div class="tab-content active" id="description">
                    <h3>Product Description</h3>
                    <p><%= product.description %></p>
                </div>
                
                <div class="tab-content" id="ingredients">
                    <h3>Ingredients</h3>
                    <ul class="ingredients-list">
                        <% product.ingredients.forEach(ingredient => { %>
                            <li><%= ingredient %></li>
                        <% }); %>
                    </ul>
                </div>
                
                <div class="tab-content" id="usage">
                    <h3>Usage Instructions</h3>
                    <p>For best results, follow traditional Ayurvedic principles of consumption. Take as directed by your healthcare practitioner or as indicated on the package.</p>
                    <p><strong>Important:</strong> Consult with a qualified healthcare provider before starting any herbal supplement regimen, especially if you have existing health conditions or are taking medications.</p>
                </div>
            </div>
        </div>
    </section>
</main>

<%- include('partials/footer') %>