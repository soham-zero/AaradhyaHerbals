<%- include('partials/header') %>

<main>
    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-content">
            <h1 class="hero-title">Ancient Wisdom, Modern Wellness</h1>
            <p class="hero-subtitle">Discover the power of authentic Ayurvedic medicine crafted with pure, natural ingredients for your holistic health journey.</p>
            <div class="hero-buttons">
                <a href="/products" class="btn btn-primary">Explore Products</a>
                <a href="#about" class="btn btn-secondary">Learn More</a>
            </div>
        </div>
        <div class="hero-image">
            <img src="https://images.pexels.com/photos/4386467/pexels-photo-4386467.jpeg?auto=compress&cs=tinysrgb&w=800" alt="Ayurvedic herbs and spices">
        </div>
    </section>

    <!-- Mission Section -->
    <section class="mission" id="about">
        <div class="container">
            <div class="mission-content">
                <h2 class="section-title">Our Mission</h2>
                <p class="mission-text">To bridge the gap between ancient Ayurvedic wisdom and modern wellness needs, providing authentic, high-quality herbal medicines that nurture the body, mind, and spirit naturally.</p>
                <div class="mission-motto">
                    <blockquote>
                        "Health is not merely the absence of disease, but a state of complete physical, mental and spiritual well-being."
                    </blockquote>
                    <cite>- Our Guiding Philosophy</cite>
                </div>
            </div>
        </div>
    </section>

    <!-- About Section -->
    <section class="about">
        <div class="container">
            <div class="about-grid">
                <div class="about-text">
                    <h2 class="section-title">About Ayurvedic Wellness</h2>
                    <p>Founded on the principles of traditional Ayurvedic medicine, we are dedicated to providing pure, authentic herbal formulations that have been trusted for thousands of years.</p>
                    <p>Our products are carefully crafted using time-honored methods and the finest organic ingredients, ensuring maximum potency and effectiveness while maintaining the integrity of ancient wisdom.</p>
                    <div class="about-values">
                        <div class="value">
                            <h3>üå± Pure & Natural</h3>
                            <p>100% organic ingredients sourced from trusted farmers</p>
                        </div>
                        <div class="value">
                            <h3>üè∫ Traditional Methods</h3>
                            <p>Ancient preparation techniques preserved for authenticity</p>
                        </div>
                        <div class="value">
                            <h3>üî¨ Quality Assured</h3>
                            <p>Rigorous testing for purity and potency</p>
                        </div>
                    </div>
                </div>
                <div class="about-image">
                    <img src="https://images.pexels.com/photos/4386370/pexels-photo-4386370.jpeg?auto=compress&cs=tinysrgb&w=600" alt="Traditional Ayurvedic preparation">
                </div>
            </div>
        </div>
    </section>

    <!-- Featured Products -->
    <section class="featured-products">
        <div class="container">
            <h2 class="section-title">Featured Products</h2>
            <div class="products-grid">
                <% products.forEach(product => { %>
                    <div class="product-card">
                        <div class="product-image">
                            <img src="<%= product.image %>" alt="<%= product.name %>" onerror="this.src='https://images.pexels.com/photos/4386467/pexels-photo-4386467.jpeg?auto=compress&cs=tinysrgb&w=400'">
                        </div>
                        <div class="product-info">
                            <h3 class="product-name"><%= product.name %></h3>
                            <p class="product-description"><%= product.shortDescription %></p>
                            <div class="product-price"><%= product.price %></div>
                            <a href="/products/<%= product.id %>" class="btn btn-outline">View Details</a>
                        </div>
                    </div>
                <% }); %>
            </div>
            <div class="text-center">
                <a href="/products" class="btn btn-primary">View All Products</a>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="cta">
        <div class="container">
            <div class="cta-content">
                <h2>Start Your Wellness Journey Today</h2>
                <p>Experience the transformative power of authentic Ayurvedic medicine</p>
                <a href="/products" class="btn btn-primary">Shop Now</a>
            </div>
        </div>
    </section>
</main>

<%- include('partials/footer') %>