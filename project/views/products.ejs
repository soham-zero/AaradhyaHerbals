<%- include('partials/header') %>

<main>
    <section class="page-header">
        <div class="container">
            <h1 class="page-title">Our Products</h1>
            <p class="page-subtitle">Discover our collection of authentic Ayurvedic formulations</p>
        </div>
    </section>

    <section class="products-section">
        <div class="container">
            <div class="products-grid">
                <% products.forEach(product => { %>
                    <div class="product-card hover-card">
                        <div class="product-image">
                            <!-- Optional: no image in your new fields, fallback -->
                            <img src="https://images.pexels.com/photos/4386467/pexels-photo-4386467.jpeg?auto=compress&cs=tinysrgb&w=400" 
                                 alt="<%= product.productName %>">
                        </div>
                        <div class="product-info">
                            <h3 class="product-name"><%= product.productName %></h3>
                            <p class="product-description">
                                <strong>Latin Name:</strong> <%= product.latinName %><br>
                                <strong>Part Used:</strong> <%= product.part %><br>
                                <strong>Use:</strong> <%= product.use %><br>
                                <strong>Concentration:</strong> <%= product.concentration %>
                            </p>

                            <div class="product-price">
                                    <% if (product.id == '105' || product.id == '106' || product.id == '107') { %>
                                        <div><strong>Price (30 Tabs) MDP:</strong> ₹<%= product.price30TabsMDP %></div>
                                        <div><strong>Price (30 Tabs) MRP:</strong> ₹<%= product.price30TabsMRP %></div>
                                        <div><strong>Price (275 Tabs) MDP:</strong> ₹<%= product.price275TabsMDP %></div>
                                        <div><strong>Price (275 Tabs) MRP:</strong> ₹<%= product.price275TabsMRP %></div>
                                    <% } else if (product.id == '108' || product.id == '109' || product.id == '110' || product.id == '111' || product.id == '112') { %>
                                        <div><strong>Price (30 Tabs) MDP:</strong> ₹<%= product.price30TabsMDP %></div>
                                        <div><strong>Price (30 Tabs) MRP:</strong> ₹<%= product.price30TabsMRP %></div>
                                        <div><strong>Price (550 Tabs) MDP:</strong> ₹<%= product.price550TabsMDP %></div>
                                        <div><strong>Price (550 Tabs) MRP:</strong> ₹<%= product.price550TabsMRP %></div>
                                    <% } else { %>
                                        <div><strong>Price (60 Tabs) MDP:</strong> ₹<%= product.price60TabsMDP %></div>
                                        <div><strong>Price (60 Tabs) MRP:</strong> ₹<%= product.price60TabsMRP %></div>
                                        <div><strong>Price (550 Tabs) MDP:</strong> ₹<%= product.price550TabsMDP %></div>
                                        <div><strong>Price (550 Tabs) MRP:</strong> ₹<%= product.price550TabsMRP %></div>
                                    <% } %>
                            </div>


                            <div class="product-hover-content">
                                     <a href="/products/<%= product.docID %>" class="btn btn-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
               
            </div>
        </div>
    </section>
</main>

<%- include('partials/footer') %>
